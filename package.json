{
  "name": "code-todos",
  "displayName": "Code Todos - Task Manager",
  "description": "ðŸš€ Powerful todo manager with syntax highlighting. Track tasks in code comments, organize with categories, and boost your productivity!",
  "version": "1.0.0",
  "publisher": "sajjadzarepour",
  "author": {
    "name": "Sajjad Zarepour"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "todo",
    "task",
    "productivity",
    "task manager",
    "comment",
    "syntax highlighting",
    "organizer",
    "todos",
    "checklist",
    "notes"
  ],
  "galleryBanner": {
    "color": "#1e293b",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devsajad/Todo-Code--VsCode-Extenstion"
  },
  "bugs": {
    "url": "https://github.com/devsajad/Todo-Code--VsCode-Extenstion/issues"
  },
  "homepage": "https://github.com/devsajad/Todo-Code--VsCode-Extenstion#readme",
  "license": "MIT",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-todos.showPanel",
        "title": "Show Code Todos Panel"
      },
      {
        "command": "code-todos.debug",
        "title": "Debug Todo State"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-todos-container",
          "title": "Code Todos",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "code-todos-container": [
        {
          "icon": "media/icon.svg",
          "id": "code-todos-view",
          "name": "Code Todos",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "npm run build:webview && webpack --mode production --devtool hidden-source-map",
    "build:webview": "cd webview-ui && npm install && npm run build",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
